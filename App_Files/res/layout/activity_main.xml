<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:id="@+id/rlRoot">

            <RelativeLayout
                android:id="@+id/rlWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:visibility="invisible">
                <RelativeLayout
                    android:id="@+id/rlMain"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/main_view"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/txtCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="36dp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"></TextView>

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_below="@id/txtCity"
                        android:textColor="#ffffff"
                        android:textSize="30dp"></TextView>
                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="120dp"
                        android:layout_height="220dp"
                        android:layout_below="@id/txtTime"
                        android:src="@drawable/wa1"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtValue"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/imgIcon"
                        android:text="°"
                        android:textSize="70dp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-condensed-light"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rlMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:id="@+id/rldetails"
                    android:padding="16dp">

                    <ScrollView
                        android:id="@+id/sv_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/rscrollView_1">

                            <ImageView
                                android:id="@+id/imgFeelLike"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/thermometer"></ImageView>
                            <TextView
                                android:id="@+id/txtTitleFeelLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgFeelLike"
                                android:text="Feel Like"
                                android:textColor="#000000"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"></TextView>
                            <TextView
                                android:id="@+id/txtValueFeelLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtTitleFeelLike"
                                android:layout_alignLeft="@id/txtTitleFeelLike"
                                android:text="C"
                                android:textColor="#000000"
                                android:textSize="38dp"></TextView>
                            <ImageView
                                android:id="@+id/imgHumidity"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/humidity"
                                android:layout_below="@+id/imgFeelLike"
                                android:layout_marginTop="30dp"></ImageView>
                            <TextView
                                android:id="@+id/txtTitleHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgHumidity"
                                android:layout_alignTop="@+id/imgHumidity"
                                android:text="Humidity"
                                android:textColor="#000000"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"></TextView>
                            <TextView
                                android:id="@+id/txtValueHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtTitleHumidity"
                                android:layout_alignLeft="@id/txtTitleHumidity"
                                android:text="C"
                                android:textColor="#000000"
                                android:textSize="38dp"></TextView>
                            <ImageView
                                android:id="@+id/imgPressure"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/atmospheric"
                                android:layout_below="@+id/imgHumidity"
                                android:layout_marginTop="30dp"></ImageView>
                            <TextView
                                android:id="@+id/txtTitlePressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgPressure"
                                android:layout_alignTop="@+id/imgPressure"
                                android:text="Pressure"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000000"
                                android:textSize="22dp"></TextView>
                            <TextView
                                android:id="@+id/txtValuePressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtTitlePressure"
                                android:layout_alignLeft="@id/txtTitlePressure"
                                android:text="Pa"
                                android:textColor="#000000"
                                android:textSize="38dp"></TextView>
                            <ImageView
                                android:id="@+id/imgWind"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_below="@+id/imgPressure"
                                android:layout_marginTop="40dp"
                                android:src="@drawable/anemometer"></ImageView>
                            <TextView
                                android:id="@+id/txtTitleWind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgWind"
                                android:layout_alignTop="@+id/imgWind"
                                android:text="Wind speed"
                                android:textColor="#000000"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"></TextView>
                            <TextView
                                android:id="@+id/txtValueWind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtTitleWind"
                                android:layout_alignLeft="@id/txtTitleWind"
                                android:text="km/h"
                                android:textColor="#000000"
                                android:textSize="38dp"></TextView>
                            <ImageView
                                android:id="@+id/imgrain"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_below="@+id/imgWind"
                                android:layout_marginTop="40dp"
                                android:src="@drawable/rainfall"></ImageView>
                            <TextView
                                android:id="@+id/txtTitlerain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgrain"
                                android:layout_alignTop="@+id/imgrain"
                                android:text="Rain fall"
                                android:textColor="#000000"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"></TextView>
                            <TextView
                                android:id="@+id/txtValuerain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtTitlerain"
                                android:layout_alignLeft="@id/txtTitlerain"
                                android:text="mm"
                                android:textColor="@color/black"
                                android:textSize="38dp"></TextView>
                            <Button
                                android:id="@+id/History"
                                android:layout_below="@id/Lrecycle"
                                android:layout_width="380dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Change Location"
                                android:onClick="back"
                                android:background="@drawable/custom_button">
                            </Button>
                            <LinearLayout
                                android:id="@+id/Lrecycle"
                                android:layout_below="@id/imgrain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/titlerecycle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6 Day"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"></TextView>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/recycle_view"/>

                            </LinearLayout>
                        </RelativeLayout>
                    </ScrollView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlsecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/rldetails">

                </RelativeLayout>

            </RelativeLayout>


    <ImageView
        android:id="@+id/mainicon"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/forecaster"
        android:layout_height="200dp">
    </ImageView>
    <EditText
        android:layout_below="@+id/mainicon"
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:capitalize="words"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="Input City"></EditText>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggle_switch"
        android:layout_below="@+id/edt"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="80dp"
        android:thumb="@drawable/toggle_button"
        app:track="@drawable/track_button"
        app:showText="true"
        android:textOn="°C"
        android:textOff="°F"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toggle_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Search"
        android:onClick="Loading"
        android:enabled="false"
        android:background="@drawable/custom_button"></Button>

</RelativeLayout>